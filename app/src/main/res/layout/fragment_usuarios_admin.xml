<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/producto_mainLinear"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Admin.UsuariosAdminFragment"
        android:orientation="vertical"
        android:paddingHorizontal="30dp">

    <!-- TODO: Update blank fragment layout -->


    <androidx.appcompat.widget.AppCompatEditText
        android:layout_marginHorizontal="20dp"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_gravity="center_horizontal"
        android:hint="@string/product_txt"
        android:textAlignment="center"
        android:background="@drawable/edit_txt_round_white"
        />

    <TextView
        android:id="@+id/userResultTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/default_results"
        android:textColor="@color/black"
        android:textSize="20sp"/>

    <ImageView
        android:id="@+id/create_userBtn"
        android:layout_marginTop="8sp"
        android:layout_marginBottom="8sp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/ic_launcher"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/usuarios_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

    </androidx.recyclerview.widget.RecyclerView>
    </androidx.appcompat.widget.LinearLayoutCompat>
</layout>